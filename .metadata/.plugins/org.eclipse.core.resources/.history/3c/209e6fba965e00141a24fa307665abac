package edu.projecteuler.numberlettercounts;

public class NumberLetterCounts {

	private static String getWordsForNumber(final int number) {
		final StringBuilder builder = new StringBuilder();
		final int hundreads = number / 100;
		final int tenths = (number % 100) / 10;
		final int ones = (number % 100) % 10;
		System.out.println(hundreads);
		System.out.println(tenths);
		System.out.println(ones);
		return builder.toString();
	}

	public static void main(String[] args) {
		final String worded = getWordsForNumber(342);
	}
}
